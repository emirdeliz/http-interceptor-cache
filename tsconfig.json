{
	"compilerOptions": {
		"module": "commonjs",
		"strict": true,
		"moduleResolution": "node",
		"target": "esnext",
		"baseUrl": ".",
		"allowJs": true,
		"lib": ["es2022", "es6", "dom"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": false,
		"outDir": "dist",
		"noEmitOnError": true,
		"skipLibCheck": true,
		"paths": {
			"@css/*": ["src/css/*"],
			"@html/*": ["src/html/*"],
			"@scripts/*": ["src/scripts/*"],
			"@tests-setup/*": ["tests/setup/*"],
			"@tests/*": ["tests/*"]
		}
	},
	"exclude": ["node_modules"]
}
